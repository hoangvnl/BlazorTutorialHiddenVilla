@page "/learningadvancerouting"
@inject NavigationManager NavManager


<h3>LearningAdvanceRouting</h3>
<h4>Parameter 1: @Param1</h4>
<h4>Parameter 2: @Param2</h4>

<p>
    <button class="btn btn-primary" @onclick="LoadParameters">
        Load parameters
    </button>
    @*<a href="/learningrouting">Back to routing</a>*@
    <button class="btn btn-primary" @onclick="BackToRouting">Back to routing</button>
</p>


@code {
    private string Param1 { get; set; }
    private string Param2 { get; set; }

    private void LoadParameters()
    {
        var absoluteUri = new Uri(NavManager.Uri);
        var queryParam = System.Web.HttpUtility.ParseQueryString(absoluteUri.Query);

        Param1 = queryParam["Param1"] ?? "";
        Param2 = queryParam["Param2"] ?? "";
    }

    private void BackToRouting()
    {
        NavManager.NavigateTo("learingrouting");
    }
}
